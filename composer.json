{
  "name": "solophp/task-queue",
  "type": "library",
  "description": "Enhanced PHP task queue using Solo Database with retry mechanism and task expiration support.",
  "keywords": ["php", "queue", "tasks", "jobs", "scheduler", "async"],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
      "email": "vedastudio@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\TaskQueue\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Solo\\TaskQueue\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.2",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-posix": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}